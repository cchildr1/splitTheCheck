<h3>Search Result</h3>

<table>
  <thead>
  <tr>
    <th>Name</th>
    <th>Street Address</th>
    <th>City</th>
    <th>State</th>
    <th>Zip Code</th>
    <th>Splits?</th>
  </tr>
  </thead>

  <tbody>
  <% @results.each do |restaurant| %>
    <tr>
      <td><%= link_to restaurant.name, restaurant %></td>
      <td><%= restaurant.streetaddress %></td>
      <td><%= restaurant.city %></td>
      <td><%= restaurant.state %></td>
      <td><%= restaurant.zipcode %></td>
      <% if (restaurant.sum_votes > 0) %>
        <td><%= image_tag("thumbsup.png", size: 16) %></td>
      <% elsif(restaurant.sum_votes < 0) %>
        <td><%= image_tag("thumbsdown.png", size: 16) %></td>
      <% else %>
        <td>¯\_(ツ)_/¯</td>
      <% end %>
    </tr>
  <% end %>
  </tbody>
</table>