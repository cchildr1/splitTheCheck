<div class="row"><div class="col-md-2"></div><div class="col-md-8"><h3>Your Favorite Restaurants</h3></div><div class="col-md-2"></div></div>
<div class="row">
  <div class="col-md-2"></div>
  <div class="col-md-8">
    <table>
      <thead>
      <tr>
        <th>Restaurant</th>
        <th>Created At:</th>
      </tr>
      </thead>


      <tbody>
      <% @favorites.each do |favorite| %>
        <tr>
          <td><%= link_to favorite.restaurant.name, favorite.restaurant %></td>
          <td><%= favorite.created_at %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
  <div class="col-md-2"></div>
</div>

<div class="row"><div class="col-md-2"></div><div class="col-md-8"><h3>Your Comments</h3></div><div class="col-md-2"></div></div>
<div class="row">
  <div class="col-md-2"></div>
  <div class="col-md-8">
    <table>
      <thead>
      <tr>
        <th>Content</th>
        <th>Restaurant</th>
        <th>Created At:</th>
      </tr>
      </thead>


      <tbody>
      <% @comments.each do |comment| %>
        <tr>
          <td><%= comment.content %></td>
          <td><%= link_to comment.restaurant.name, comment.restaurant %></td>
          <td><%= comment.created_at %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
  <div class="col-md-2"></div>
</div>

<div class="row"><div class="col-md-2"></div><div class="col-md-8"><h3>Your Votes</h3></div><div class="col-md-2"></div></div>
<div class="row">
  <div class="col-md-2"></div>
  <div class="col-md-8">
    <table>
      <thead>
      <tr>
        <th>Splits?</th>
        <th>Restaurant</th>
        <th>Created At:</th>
      </tr>
      </thead>


      <tbody>
      <% @votes.each do |vote| %>
        <tr>
          <td>
            <% if vote.value == 1 %>
              <%= image_tag("thumbsup.png", size: 16) %>
            <% elsif vote.value == -1 %>
              <%= image_tag("thumbsdown.png", size: 16) %>
            <% end %>
          </td>
          <td><%= link_to vote.restaurant.name, vote.restaurant %></td>
          <td><%= vote.created_at %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
  <div class="col-md-2"></div>
</div>

